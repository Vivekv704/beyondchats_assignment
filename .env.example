# BeyondChats Article System - Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=your-neon-host.neon.tech
DB_PORT=5432
DB_DATABASE=your-database-name
DB_USERNAME=your-username
DB_PASSWORD=your-password

# =============================================================================
# LARAVEL API CONFIGURATION
# =============================================================================
APP_NAME="BeyondChats Article System"
APP_ENV=production
APP_KEY=base64:your-generated-app-key
APP_DEBUG=false
APP_URL=https://your-render-app.onrender.com

# Laravel specific
APP_TIMEZONE=UTC
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# GROQ AI CONFIGURATION
# =============================================================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# =============================================================================
# FRONTEND CONFIGURATION (React)
# =============================================================================
VITE_API_BASE_URL=https://your-render-app.onrender.com/api
VITE_APP_NAME="BeyondChats Article System"
VITE_APP_VERSION=1.0.0

# =============================================================================
# NODE.JS ENHANCEMENT SERVICE CONFIGURATION
# =============================================================================
LARAVEL_API_BASE_URL=https://your-render-app.onrender.com/api
LARAVEL_API_KEY=your_api_key_if_needed

# Service Configuration
REQUEST_TIMEOUT=30000
MAX_RETRIES=3
LOG_LEVEL=info
EXECUTION_MODE=interactive

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Render Backend URL
RENDER_BACKEND_URL=https://your-render-app.onrender.com

# Netlify Frontend URL
NETLIFY_FRONTEND_URL=https://your-netlify-app.netlify.app

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-netlify-app.netlify.app,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# OPTIONAL: LOCAL DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment for local development
# DB_HOST=localhost
# APP_URL=http://localhost:8000
# VITE_API_BASE_URL=http://localhost:8000/api
# LARAVEL_API_BASE_URL=http://localhost:8000/api